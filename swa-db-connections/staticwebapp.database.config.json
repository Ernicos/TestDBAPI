{
    "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.10.23/dab.draft.schema.json",
    "data-source": {
      "database-type": "mssql",
      "connection-string": "@env('myconnectionstring')",
      "options": {
        "set-session-context": false
      }
    },
    "runtime": {
      "rest": {
        "enabled": true,
        "path": "/api",
        "request-body-strict": true
      },
      "graphql": {
        "enabled": false,
        "path": "/graphql",
        "allow-introspection": true
      },
      "host": {
        "cors": {
          "origins": ["https://localhost:4280"],
          "allow-credentials": false
        },
        "authentication": {
          "provider": "StaticWebApps"
        },
        "mode": "production"
      }
    },
    "entities": {
      "Country": {
        "source": {
          "object": "country.country",
          "type": "table",
          "key-fields": [
            "id"
          ]
        },
        "graphql": {
          "enabled": false,
          "type": {
            "singular": "Country",
            "plural": "Countries"
          }
        },
        "rest": {
          "enabled": true,
          "methods": [ "get" ]
        },
        "permissions": [
          {
            "role": "anonymous",
            "actions": [
              {
                "action": "*"
              }
            ]
          }
        ]
      }
    }
  }
